<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/purple_700">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_shapewithlogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/description"
        android:id="@+id/animationpic"
        />


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_signInStart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:contentDescription="@string/description"
            android:src="@drawable/ic_signinpic"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:id="@+id/img_signUpStart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/img_signInStart"
            android:clickable="true"
            android:contentDescription="@string/description"
            android:src="@drawable/ic_signuppic" />
    </RelativeLayout>

</RelativeLayout>